<% layout('layouts/boilerplate') -%>
<body>
  <br>
  <h1>All listings</h1>   <br> 
  <div class="row row-col-lg-3 row-col-md-2 row-col-sm-1">
  <% for(let list of lists) { %>
    <div class="card" style="width: 20rem">
        <a href="/listings/<%= list.id %>" class="listing-link">
      <img src="<%=list.image.url %>" class="card-img-top" alt="..." style="height: 20rem" />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <%= list.title %> <br />
          <b>&#8377; <%= list.price.toLocaleString("en-IN") %></b>/per night
        </p>
      </div>
    </a>
    </div>
  <% } %>
  </div>
</body>
